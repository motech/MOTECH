<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="classpath:META-INF/motech/applicationPlatformServer.xml"/>

    <!-- overwrite osgiFrameworkService definition -->
    <bean id="osgiFrameworkService" class="org.motechproject.server.impl.OsgiFrameworkService">
        <property name="internalBundleFolder" value="/WEB-INF/bundles"/>
        <property name="externalBundleFolder" value=""/>
    </bean>
</beans>
